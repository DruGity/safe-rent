{% extends 'base.html.twig' %}
    {% block body %}

        <b>Favorite</b>


        <table>
        <thead>
        <tr>
            <th>AdvertId</th>
           <th>Description</th>
            <th>PricePerMonth</th>
            <th>Remove</th>
        </tr>
        </thead>
        {% if order.adverts|length > 0 %}
            {% for advert in order.adverts %}
                <tr>
                    <td><a href="">{{ advert.id }}</a></td>
                    <td>{{ advert.description }} </td>
                    <td>{{ advert.pricePerMonth }}</td>
                    <td><a href="{{ path('basket_remove_order', {'id': advert.id }) }}">Удалить</a> </td>
                </tr>
            {% endfor %}
            {% endif %}
            </table>
        <br>
            <a href="#">Оформить заказ</a>
            {% endblock %}