{% extends 'base.html.twig' %}

{% block body %}
    <h1>Report</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ report.id }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ report.reason }}</td>
            </tr>
            <tr>
                <th>Commentid</th>
                <td>{{ report.commentId }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ report.userId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('report_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('report_edit', { 'id': report.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
