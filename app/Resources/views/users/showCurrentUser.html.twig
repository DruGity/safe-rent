{% extends 'base.html.twig' %}

{% block body %}
    <h1>Личный кабинет</h1>

    <table>
        <tbody>

        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ user.secondName }}</td>
        </tr>
        <tr>
            <th>Login</th>
            <td>{{ user.login }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td>{{ user.photo }}</td>
        </tr>
        <tr>
            <th>Phone number</th>
            <td>{{ user.phoneNumber }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>

        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('users_edit', { 'id': user.id }) }}">Редактировать профиль</a>
        </li>
        <li>
            <a href="{{ path('message_index') }}">Моя почта</a>
        </li>

    </ul>
{% endblock %}
