<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset("bundles/default/css/main.css")}}" rel="stylesheet" type="text/css" media="all" />
            <link href="{{ asset("bundles/default/css/bootstrap.min.css")}}" rel="stylesheet" type="text/css" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>

    <header id="main-header" class="main-header">

        <nav class="main-navigation">
            <ul>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li>
                    <a href="{{ path('users_show_current_user') }}">Личный кабинет</a>
                </li>
                    <li>
                        <a href="{{ path('logout') }}">Выйти</a>
                    </li>
                {% else %}
                <li>
                    <a href="{{ path('users_login') }}" >Войти</a>
                </li>
                {% endif %}
                <li>
                    <a href="{{ path('users_new') }}">Регистрация</a>
                </li>
                <li>
                    <a href="{{ path('adverts_index') }}">Объявления</a>
                </li>
                <li>
                    <a href="{{ path('users_index') }}">Пользователи</a>
                </li>

            </ul>
        </nav>
    </header>
    <div class="container">
        {% block body %}{% endblock %}
        {% block javascripts %}<script src="{{ asset("bundles/default/js/main.js")}}"></script>{% endblock %}
    </div>
    </body>
</html>
